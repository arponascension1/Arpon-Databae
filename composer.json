{
    "name": "arpon/database",
    "description": "A powerful database abstraction layer with advanced schema builder, query builder, and ORM features for MySQL and SQLite",
    "version": "2.0.0",
    "type": "library",
    "license": "MIT",
    "keywords": ["database", "mysql", "sqlite", "orm", "query-builder", "schema", "migration"],
    "homepage": "https://github.com/arponascension1/Arpon-Databae",
    "authors": [
        {
            "name": "arponascension1",
            "email": "arponascension20@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Arpon\\Database\\": "src/Database/"
        },
        "files": [
            "src/Database/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Arpon\\Database\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "test-mysql": "php mysql_index.php",
        "test-sqlite": "php sqlite_cascade_test.php"
    }
}
